func getDuplicateNum(pai: [Int])-&gt;[Int]{
    var playerNumPai = pai
    playerNumPai.sort()
    var duplicateNum = [Int]()
    for i in 0..&lt;playerNumPai.count{
        for j in 0..&lt;i{
            if playerNumPai[j] == playerNumPai[i]{
                duplicateNum.append(playerNumPai[i])
//                print("\(duplicateNum)")
            }
        }
    }
    return duplicateNum
}

